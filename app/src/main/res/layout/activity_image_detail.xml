<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dd545454"
    tools:context="demo.yc.joviality.ui.activity.ImageDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/image_detail_prepare_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/image_detail_prepare_small"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/image_detail_prepare_gif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <ImageView
            android:transitionName="@string/image"
            android:id="@+id/image_detail_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <include
        layout="@layout/common_tool_bar"/>

</FrameLayout>
