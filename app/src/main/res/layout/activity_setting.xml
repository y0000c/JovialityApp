<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_back"
    tools:context="demo.yc.joviality.ui.activity.SettingActivity">

    <include
        layout="@layout/common_tool_bar"/>

    <RelativeLayout
        android:id="@+id/setting_skin_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e7e6e6">
        <TextView
            android:textColor="@color/skin_main_color"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换主题"
            android:textSize="14sp"/>
        <TextView
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/skin_main_color"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_cached_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e7e6e6">
        <TextView
            android:textColor="@color/skin_main_color"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ProgressBar
                android:id="@+id/setting_cached_bar"
                android:src="@color/skin_main_color"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView

                android:textColor="@color/skin_main_color"
                android:id="@+id/setting_cached_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10M"/>
        </LinearLayout>

    </RelativeLayout>
