<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--三张图片-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/news_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/layout_3_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="何永财何永财"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_3_image1"
                        android:src="@drawable/morning"/>
                    <ImageView
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_3_image2"
                        android:src="@drawable/morning"/>
                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:id="@+id/layout_3_image3"
                        android:src="@drawable/morning"/>
                </LinearLayout>

            </LinearLayout>

            <!--一张图片-->
            <LinearLayout
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_layout_1"
                android:orientation="horizontal">
                <TextView
                    android:maxLines="3"
                    android:id="@+id/layout_1_title"
                    android:text="sdflkjasssssssdfjlasjkdf"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginStart="10dp"
                    android:id="@+id/layout_1_image"
                    android:scaleType="fitXY"
                    android:src="@drawable/morning"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </LinearLayout>

            <TextView
                android:layout_margin="5dp"
                android:text="sdafassdfad"
                android:id="@+id/news_layout_0_title"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/alpha_20_black"
                android:id="@+id/news_layout_time"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-12"/>
            <TextView
                android:textColor="@color/alpha_20_black"
                android:id="@+id/news_layout_source"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-12-12"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView >

